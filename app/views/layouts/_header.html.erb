<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("home"), root_path %></li>
        <li><%= link_to t("help"), help_path %></li>
        <li><%= link_to t("contact"), contact_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("categories"), categories_path %></li>
          <li><%= link_to t("login.user"), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "login.account" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("login.profile"), current_user %></li>
              <li><%= link_to t("login.setting"), edit_user_path(current_user) %></li>
              <li>
                <%= link_to t("login.logout"), logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
          <% if current_user.is_admin? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t "title.admin_title" %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t("login.user"), admin_users_path %></li>
                <li class="divider"></li>
                <li><%= link_to t("admin.category.name"), admin_categories_path %></li>
                <li><%= link_to t("admin.lesson"), "#" %></li>
                <li><%= link_to t("admin.word"), admin_words_path %></li>
              </ul>
            </li>
          <% end %>
        <% else %>
          <li><%= link_to t("login.button"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
