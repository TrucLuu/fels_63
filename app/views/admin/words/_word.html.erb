<% @words.each do |word| %>
  <tr>
    <td><%= word.content %></td>
    <td><%= word.category.name %></td>
    <td><%= link_to t("features.show"), word %></td>
    <td><%= link_to t("features.edit"), edit_admin_word_path(word) %></td>
    <td><%= link_to t("features.destroy"), word, method: :delete,
                  data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>