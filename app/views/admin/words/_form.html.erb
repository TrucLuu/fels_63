<%= form_for [:admin, @word] do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_field :content %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br>
    <%= f.select(
          :category_id,
          options_from_collection_for_select(@categories, :id, :name)
        )
    %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
